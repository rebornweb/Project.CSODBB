@using System.Globalization
@using Unify.Connect.Web.Extensions
@model AdapterOperationStatisticsViewInformation
@if (Model.IsInLine)
{
    <span>
        <span>@AdapterResources.CurrentEntityCountForAdapterText</span>
        <span>
            <a href="@Url.Action("SearchEntities", new {partitionId = Model.AdapterId, searchContext = IdentityBrokerEntitySearchController.StandardEntitySearchContextKey})">
                @Model.EntityCount.ToString(CultureInfo.InvariantCulture)
            </a>
        </span>
        <span> , </span>
        <span>
            @AdapterResources.CurrentPendingChangesCountForAdapterText
        </span>
        <span>
            @Model.PendingChanges.ToString(CultureInfo.InvariantCulture)
        </span>
    </span>
}
else
{
    <table class="RightSpaced BottomSpaced VerticalAlignTable">
        <tr>
            <td>@AdapterResources.CurrentEntityCountForAdapterText</td>
            <td>
                <a href="@Url.Action("SearchEntities", new {partitionId = Model.AdapterId, searchContext = IdentityBrokerEntitySearchController.StandardEntitySearchContextKey})">
                    @Model.EntityCount.ToString(CultureInfo.InvariantCulture)
                </a>
            </td>
        </tr>
        <tr>
            <td>@AdapterResources.CurrentPendingChangesCountForAdapterText</td>
            <td>
                @Model.PendingChanges.ToString(CultureInfo.InvariantCulture)
            </td>
        </tr>
    </table>
}