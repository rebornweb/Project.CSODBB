    Html.RenderAction("SchedulesHeader", "Schedules", new {area = "Framework"});
    // ReSharper enable Mvc.ActionNotResolved
    // ReSharper enable Mvc.ControllerNotResolved
}

<div>

@using (Html.DecorateForm(
            () => Html.BeginForm("DateRangeEntitySchemaValidator", "Connector", new {connectorId = Model.ConnectorId}, FormMethod.Post, new{id="DateRangeEntitySchemaValidatorForm"}),
